class "Реквизиты страхового случая";

import classes Константы,ФункцииПримененияКостант;


inclass public

  --@doc Конструктор: cоздание объекта по записи НашеУчреждение
func СоздатьДляНашеУчреждение (локНашеУчреждение: Базовый.Данные.Субъект) : ЭлементыДанных.РеквизитыСтрахСлучая;
  Result = inherited Create;
  Result.ЗапомнитьНашеУчреждение(локНашеУчреждение);
end;


inobject public

func НашеУчреждение : Базовый.Данные.Субъект;
  return _НашеУчреждение;
end;

func Субъект : Базовый.Данные.Субъект;
  return _Субъект;
end;

func ТипПособия : integer;
  return _ТипПособия;
end;

func ЗаписьСтрахСлучая : Данные.СтраховойСлучай;
  return _ЗаписьСтрахСлучая;
end;


proc ЗапомнитьНашеУчреждение(локНашеУчреждение : Базовый.Данные.Субъект);
  _НашеУчреждение = локНашеУчреждение;
end;

proc ЗапомнитьСубъект(локСубъект : Базовый.Данные.Субъект);
  _Субъект = локСубъект;
end;

proc ЗапомнитьТипПособия(локТипПособия : integer);
  _ТипПособия = локТипПособия;
end;


proc ЗапомнитьЗаписьСтрахСлучая(локЗаписьСтрахСлучая : Данные.СтраховойСлучай);
  _ЗаписьСтрахСлучая = локЗаписьСтрахСлучая;
end;



--@doc Возвращает массив параметров, каждая строка - [имя поля заявления, значение поля]
func ПараметрыНовогоСтрахСлучая : variant[2];
  Result = nil;
  Result[1] = ['НашеУчреждение',_НашеУчреждение];
  Result[2] = ['Субъект',_Субъект];
  Result[3] = ['ТипПособия',_ТипПособия];
  Result[4] = ['Имя',ИмяСтраховогоСлучаяКратко(_ТипПособия)];
end;


inobject private
_НашеУчреждение : Базовый.Данные.Субъект;
_Субъект : Базовый.Данные.Субъект;
_ТипПособия :  integer;
_ЗаписьСтрахСлучая : Данные.СтраховойСлучай;


end