  Result = inherited Create;
  Result.ЗапомнитьНашеУчреждение(локНашеУчреждение);
  Result.ЗапомнитьГруппаНачислений(локГруппаНачислений);
end;

inobject public

proc ЗапомнитьНашеУчреждение(локНашеУчреждение : Базовый.Данные.Субъект);
  _НашеУчреждение = локНашеУчреждение;
end;

proc ЗапомнитьГруппаНачислений(локГруппаНачислений : string);
  _ГруппаНачислений = локГруппаНачислений;
end;


inobject private


var _НашеУчреждение: Базовый.Данные.Субъект;
var _ГруппаНачислений: string;
var _Сотрудник: Базовый.Данные.Субъект;
