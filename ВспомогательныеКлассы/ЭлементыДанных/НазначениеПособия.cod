var _ДатаПереРасчета: Date;
var _ДатаДок: Date;
var _ДатаНачала: Date;
var _ДатаОкончания: Date;
var _НомерДок: String;
var _НаимДок: String;
var _ВидСтраховогоОбеспечения: Бюджет_ЗПиДД.Справочники.ВидыСтраховогоОбеспечения;


end