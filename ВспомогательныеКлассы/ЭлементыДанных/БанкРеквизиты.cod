class "Банковские Реквизиты";

inclass public

  --@doc Конструктор: cоздание объекта по записи НашеУчреждение
func СоздатьПоБазовойЗаписи (локБанкРеквизиты: Базовый.Справочники.БанковскиеРеквизиты) : ЭлементыДанных.БанкРеквизиты;
  Result = inherited Create;
  Result.ПоляПоБазовойЗаписи(локБанкРеквизиты);
end;


inobject public

proc ЗапомнитьСтраховойСлучай(локСтраховойСлучай : Данные.СтраховойСлучай);
  _СтраховойСлучай = локСтраховойСлучай;
end;

--@doc Возвращает массив параметров, каждая строка - [имя поля заявления, значение поля]
func ПараметрыНовойЗаписи : variant[2];
  Result = nil;
  Result[1] = ['СтраховойСлучай',_СтраховойСлучай];
  Result[2] = ['БанкНаим',_БанкНаим];
  Result[3] = ['СчетПолучателя',_СчетПолучателя];
  Result[4] = ['БИК',_БИК];
  Result[5] = ['НомерКарты',_НомерКарты];
end;



inobject private

_СтраховойСлучай : Данные.СтраховойСлучай;
_Счетчик : integer;
_БанкНаим : string;
_СчетПолучателя : string;
_БИК : string;
_НомерКарты : string;

proc ПоляПоБазовойЗаписи(локБанкРеквизиты: Базовый.Справочники.БанковскиеРеквизиты);
  _БанкНаим = локБанкРеквизиты.НаимБанка;
  _СчетПолучателя = локБанкРеквизиты.РСчет;
  _БИК = локБанкРеквизиты.БИК;
  _НомерКарты = локБанкРеквизиты.НомерБанкКарты;
end;


end