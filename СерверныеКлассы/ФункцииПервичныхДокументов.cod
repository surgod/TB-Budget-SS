class "Функции работы с записями первичных документов";


inclass public


--@doc Удаляются документы со ссылкой на заявление из указанного класса записей
proc УдалитьЗаявлениеИзКлассаДокументов (локЗаявление: Документы.Первичные.Заявление; локКлассЗаписи : Class Record);
  var Q: Query;
  Q = Query.Create([локКлассЗаписи]);
  Q.Filter = "Заявление=" + Str(локЗаявление);
  if not Q.RecordsExists:
    return;
  fi;
  Q.Select;
  СИС2.ФункцииДокумента.DeleteAllRecords(Q);
end;


end