proc шаблон_ПриСоздании(Context :Variant);
  inherited шаблон_ПриСоздании(Context);
  Template.BeginModify;
    секцСубъект.КлеткаПоПолю["Субъект.Имя"].Enabled  = true;
    секцСубъект.КлеткаПоПолю["Субъект.Имя"].OnOutput  = 'ПолеСубъект_ПриВыводе';
