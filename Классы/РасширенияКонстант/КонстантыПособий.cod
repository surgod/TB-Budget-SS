--имена типов, полные и краткие


func ИмяТипаПособия(локТипПособия : integer) : string;
  var ii : integer;
    Result ='' ;
    ii = SearchInArray(ТипыПособий, локТипПособия, [1]);
    if (ii > 0 ) :
      Result = ТипыПособий[ii,2] ;
    fi;
end;





end